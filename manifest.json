{
  "name": "Cave collec extension",
  "description": "Ajoute un tag lu/non-lu sur le site mangacollec!",
  "version": "0.8",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
   {
     "matches": ["https://*.quinta.ovh/*", "https://*.mangacollec.com/*"],
     "js": ["content-script.js"]
   }
 ],
  "action": {
    "default_popup": "popup.html"
  }
}
