{
  "name": "Cave collec extension",
  "description": "Ajoute un tag lu/non-lu sur le site mangacollec!",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
   {
     "matches": ["https://*.mangacollec.com/*"],
     "js": ["content-script.js"]
   }
 ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon16.png",
      "32": "/icon32.png",
      "48": "/icon48.png",
      "128": "/icon128.png"
    }
  },
  "icons": {
    "16": "/icon16.png",
    "32": "/icon32.png",
    "48": "/icon48.png",
    "128": "/icon128.png"
  }
}
